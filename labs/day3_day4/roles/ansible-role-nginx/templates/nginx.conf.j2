user  {{ nginx_user }};
worker_processes {{ nginx_worker_processes }};

pid /run/nginx.pid;
worker_rlimit_nofile {{ nginx_worker_rlimit_nofile }};

events {
        use epoll;
        worker_connections {{ nginx_worker_connections }};
}

http {

# --- Allow Origin 
add_header 'Access-Control-Allow-Origin' {{ nginx_add_header }};

# --- General Options
  charset   {{ nginx_charset }};
  ignore_invalid_headers   {{ nginx_gnore_invalid_headers }};
  keepalive_requests        {{ nginx_keepalive_requests }};
  max_ranges               {{ nginx_max_ranges }};
  recursive_error_pages      {{ nginx_recursive_error_pages }};
  server_tokens             {{ nginx_server_tokens }};
  server_name_in_redirect   {{ nginx_server_name_in_redirect}};
  source_charset        {{ nginx_source_charset }};

# --- TCP options
  tcp_nopush       {{ nginx_tcp_nopush }};
  tcp_nodelay      {{ nginx_tcp_nodelay }};
  sendfile         {{ nginx_sendfile }};
  set_real_ip_from {{ nginx_set_real_ip_from }};
  real_ip_header {{ nginx_real_ip_header }};

# Size Limits
  client_body_buffer_size       {{ nginx_client_body_buffer_size }};
  client_header_buffer_size     {{ nginx_client_header_buffer_size }};
  large_client_header_buffers   {{ nginx_large_client_header_buffers }};

# Timeouts
  proxy_connect_timeout {{ nginx_proxy_connect_timeout }};
  proxy_send_timeout {{ nginx_proxy_send_timeout }};
  proxy_read_timeout {{ nginx_proxy_read_timeout }};
  send_timeout {{ nginx_send_timeout }};
  client_body_timeout     {{ nginx_client_body_timeout }};
  client_header_timeout   {{ nginx_client_header_timeout }};
  keepalive_timeout {{ nginx_keepalive_timeout }};

# --- timeout for upload file
  reset_timedout_connection {{ nginx_reset_timedout_connection }};
  connection_pool_size  {{ nginx_connection_pool_size }};
  request_pool_size  {{ nginx_request_pool_size }};
  postpone_output  {{ nginx_postpone_output }};

# --- Max upload file
client_max_body_size {{ nginx_client_max_body_size }};

# --- Log format
log_format proxy_prod {{ nginx_proxy_log_format }};
log_format web_prod   {{ nginx_web_log_format }};

# --- include file conf
include {{ nginx_include }};


}
